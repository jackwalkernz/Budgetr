<Page x:Class="Budgetr.App.Views.Pages.LandingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Budgetr.App.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LandingPage">
    <Grid Margin="20">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Budgetr" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button Content="Enter" Click="OnEnterClick"/>
        </StackPanel>
    </Grid>
</Page>
