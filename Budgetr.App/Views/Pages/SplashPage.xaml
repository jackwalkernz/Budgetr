<Page x:Class="Budgetr.App.Views.Pages.SplashPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Budgetr.App.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SplashPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="BUDGETR" FontSize="64" FontWeight="UltraBlack" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1"/>
        <ProgressBar x:Name="LoadingBar" IsIndeterminate="False" Grid.Row="2" Height="10" Width="200"></ProgressBar>
        <TextBlock Text="TM The Adaptive Network 2025" FontSize="10" FontWeight="Light"  HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="3"/>
    </Grid>
</Page>
